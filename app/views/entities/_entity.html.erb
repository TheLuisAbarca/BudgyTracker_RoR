<div id="<%= dom_id entity %>">
  <%= link_to group_entity_path(params[:group_id], id: entity.id), class:"text-decoration-none text-dark shadow" do %>
    <div class="d-flex justify-content-between align-items-center bg-light m-3 py-5 px-2">
     <%= entity.name %>
     <span class="fw-bold">
       $ <%= entity.amount %>
     </span>
    </div>
  <% end %>
</div>
